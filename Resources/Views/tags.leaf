#extend("base"):    #export("body"):    <div class="container">        <div class="header">            <h1 class="text-white text-center p-3">Tags</h1>        </div>                <form method="POST" action="tags">          <div class="input-group mb-3">              <input type="text" name="name" class="form-control" placeholder="Enter a tag here...">              <div class="input-group-append">                  <input type="submit" value="Create" class="btn btn-primary">              </div>          </div>        </form>            <table class="table table-bordered bg-white">          <tbody>              #for(tag in tags):              <tr>                  <td>                      #(tag.name)                  </td>                  <td width="50">                    <form action="/tags/#(tag.id)/delete" method="POST">                        <button class="btn btn-sm btn-danger">Remove</button>                    </form>                  </td>                  <td width="50">                    <a href="./tags/#(tag.id)/edit" class="btn btn-primary btn-sm"><i class="fas fa-pen"></i></a>                  </td>              </tr>              #endfor          </tbody>      </table>    </div>    #endexport#endextend
